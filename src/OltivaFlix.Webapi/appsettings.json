{
  "api": {
    "trackRequests": true,
    "showDetailedException": true
  },
  "culture": {
    "defaultCulture": "pt-BR"
  },
  "swagger": {
    "name": "v1",
    "host": "",
    "schemes": [ "http", "https" ],
    "title": "Liquid.Example",
    "version": "v1",
    "description": "Liquid Example Api.",
    "endpoint": {
      "url": "/swagger/v1/swagger.json",
      "name": "Liquid.Example"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "redis": {
    "connectionString": "127.0.0.1:6379"
  },
  "services": [
    {
      "id": "MovieServiceHttpClient",
      "address": "http://www.omdbapi.com/",
      "timeout": 5,
      "resilience": {
        "circuitBreaker": {
          "enabled": false,
          "failureThreshold": 0.9,
          "samplingDuration": 10,
          "minimumThroughput": 3,
          "durationOfBreak": 10
        },
        "retry": {
          "enabled": false,
          "attempts": 3,
          "waitDuration": 200
        }
      }
    }
  ]

}
